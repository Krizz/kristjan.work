<!DOCTYPE html>
html(lang="en")
head
  meta(charset="UTF-8")
  title What is happening ?
  link(href="https://fonts.googleapis.com/css?family=Oswald:700")
  meta(name="viewport" content="width=device-width, initial-scale=1")

  style.
    html, body {
      overflow: hidden;
      height: 100%;
      width: 100%;
      margin: 0;
    }

    .stats {
      color: #f3030c;

      font-size: 1rem;
      vertical-align: middle;
      justify-content: center;
      margin-top: 10%;
      align-items: center;
      display: flex;
    }

    .stats small {
      margin-left: 0.4rem;
    }

    .stats span {
      font-size: 0.6rem;
      text-transform: uppercase;
      margin-left: 2%;
    }

    video {
      opacity: 0.2;
      position: fixed;
      top: 50%;
      left: 50%;
      min-width: 100%;
      min-height: 100%;
      width: auto;
      height: auto;
      z-index: -100;
      -webkit-transform: translateX(-50%) translateY(-50%);
      transform: translateX(-50%) translateY(-50%);
      background-size: cover;
      transition: all 0.6s ease-in;
    }

    body {
    font-family: 'Oswald', sans-serif;
    font-size: 4rem;
    font-weight: 700;
    display: flex;
    align-items: center;
    justify-content: center;
    }

    svg g {
      transition: all 1.9s ease-out;
      opacity: 0;
      fill: #000;
    }

    svg {
      display: none;
    }

    .center svg {
      position: absolute;
      left: -100%;
      bottom: 40%;
    }
    .center {
      position: relative;
      align-self: center;
      cursor: pointer;
      transition: all 0.6s ease-in;
      text-align: center;
      display: flex;
      flex-direction: column;
      align-items: center;
    }
    h2 {
      margin: 0;
      line-height: 140%;
      text-align: center;
      color: #fa9e00;
      text-transform: uppercase;
    }

    canvas {
      align-self: center;
      display: block;
    }

    body.full-monkey .center {
      cursor: none;
      opacity: 0;
    }


    body.full-monkey video {
      opacity: 1;
    }

    body.sleeping svg {
      display: block;
    }

    .full-monkey-intro {
      width: 100vw;
      height: 100%;
      position: fixed;
      color: #fff;
      background-color: #000;
    }
  body(class=(isSleeping === true) ? "sleeping" : "")
    audio(preload="auto" src="beautiful-song.mp3")
    .video
      - if(status == 'no') {
        video(autoplay loop src="shutterstock_v4243079.mp4")
      - }

      - if(status == 'yes') {
        video(autoplay loop src="shutterstock_v4243079.mp4")
      - }
    .center
      include public/svg/z.svg
      h2(id="status-text")= statusText
      canvas#canvas(width='239', height='240')
      .stats
        img(src="toggl.png", alt="")
        small= duration
        span hrs
  script(src="https://code.jquery.com/jquery-2.1.4.min.js")
  script(src="app.js")

